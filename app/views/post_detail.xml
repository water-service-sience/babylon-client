<Alloy>
	<Window class="container">
		<ScrollView id="scroll_view">
			
			<Label id="status_message">未読の返信が1件あります。</Label>
		
			<ImageView id="photo"></ImageView>
			
			<View class="line_element">
			    <Label>投稿者:</Label><Label id="post_user">ほげ</Label>
			</View>
			<View class="line_element">
			    <Label>投稿日時:</Label><Label id="date">2013年6月23日</Label>
			</View>
			<View class="line_element">
				<Label id="goodness_label">評価:</Label><Label id="goodness" class="var">良い</Label>
			</View>
			<View id="append_info_area" >
				<Label id="water_height_label">水位 </Label><Label id="water_height">22センチ</Label>
			</View>
			<Button id="show_in_map">投稿場所を見る</Button>
			<View id="private_area">
				<Button id="edit_post">投稿内容を編集</Button>
				<Button id="show_updates">管理者からの返信を見る</Button>
			</View>
			
			<View class="line_element">
				<TextField id="comment" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED"></TextField>
				<Button id="send_comment">コメントする</Button>
			</View>
			
			<View id="comment_area">
				
				<ListView id="comment_list" class="list" defaultItemTemplate="comment">
					<Templates>
						<ItemTemplate name="comment">
							<View class="list">
								<View class="line_element">
									<Label>投稿:</Label><Label bindId="nickname">aaa</Label>
									<Label>さん 投稿日:</Label><Label class="right" bindId="date">8/9 17:00</Label>
								</View>
								<View class="line_element">
									<Label>コメント</Label><Label bindId="comment">aaa</Label>
								</View>
							</View>
						</ItemTemplate>
						
					</Templates>
				</ListView>
				
			</View>
		</ScrollView>
	</Window>
</Alloy>