<Alloy>
	<Window class="container">
		<ListView id="my_posts" defaultItemTemplate="template" onItemclick="onPostSelected">
			<Templates>
				<ItemTemplate name="template">
					<View class="list">
						<ImageView class="thumb" bindId="thumbnail"></ImageView>
						<View class="v_container">
							<Label bindId="date">
							<Label bindId="category">
						</View>
					</View>	
						
				</ItemTemplate>
			</Templates>
			
            <ListSection headerTitle="投稿一覧">
            </ListSection>
		</ListView>
	</Window>
</Alloy>