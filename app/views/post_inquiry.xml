<Alloy>
	<Window class="container">
	    <ScrollView class="container">
		
        <Require type="view" src="post_image_view" id="image_view" onSetImage="onSetImage"/>	
		<View class="row">
			<Label class="col_3 small_text" right="0dp">内容:</Label>
			<Label id="category" class="col_6 small_text">未選択</Label>
			<Button id="select_category" class="col_3"
				onClick="onSelectCategoryClicked" >選択</Button>
		</View>
		<Require id="goodness" class="goodness_panel" type="view" src="goodness_bar" />
			
		
		<Label>メッセージ</Label>
		<TextArea id="comment"></TextArea>
		
        <View class="small_space"></View>
		<View class="row_tall">
			<Button class="col_8" id="post" onClick="onPostClicked">投稿</Button>
			<Button class="col_4" id="recapture" onClick="onRecaptureClicked">再撮影</Button>
		</View>
		<View class="row">
			<View class="col_6"></View>
			<Button id="gallery" class="small-button col_6" onClick="onGalleryClicked">ギャラリー</Button>
		</View>
		</ScrollView>
	</Window>
</Alloy>